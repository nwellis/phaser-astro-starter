---
import PhaserGame from "components/PhaserGame.astro";

export type Props = Record<string, never>;

const {} = Astro.props;
---

<PhaserGame
  id="demo-game"
  style={{
    height: "100%",
    width: "100%",
    display: "flex",
    justifyContent: "center",
  }}
  config={{
    // backgroundColor: "0x00FF00",
  }}
/>

<script>
  import { PhaserGameDivElement } from "../../components/PhaserGameElement";
  import DemoScene from "./DemoScene";

  window.customElements.whenDefined(PhaserGameDivElement.HTML_TAG).then(() => {
    const element = document.getElementById(
      "demo-game"
    ) as PhaserGameDivElement;
    element.start("demo-game", new DemoScene(), true);
  });
</script>
